<resources 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/ActionBar</item>

		<item name="android:listViewStyle">@style/ListViewSt</item>
		
		<item name="android:actionOverflowButtonStyle">@style/OverFlowTheme</item>
    	<item name="actionOverflowButtonStyle">@style/OverFlowTheme</item>
    </style>
    
    <style name="OverFlowTheme" parent="@android:style/Widget.ActionButton.Overflow">
    	<item name="android:src">@drawable/action_overflow_selector</item>
	</style>
	
    <!-- Action Bar Styles -->
    <style name="ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/ActionBar</item>
    	<item name="background">@color/ActionBar</item>
    	
    	<item name="titleTextStyle">@style/ActionBarTitle</item>
		<item name="android:titleTextStyle" tools:targetApi="11">@style/ActionBarTitle</item>
    </style>
    
    <style name="ActionBarTitle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBarTitle</item>
    	<item name="android:textSize">18sp</item>
    </style>
    
    <!-- List View Styles -->
    <style name="ListViewSt" parent="@android:style/Widget.ListView" >
        <item name="android:divider">@color/ListDivider</item>
        <item name="android:dividerHeight">1dp</item>
        
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>
    
    <style name="ListViewTitleText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/ObjectName</item>
        <item name="android:textSize">@dimen/ObjectName</item>
    </style>
    
    <style name="ListViewSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/ObjectSize</item>
        <item name="android:textSize">@dimen/ObjectSize</item>
    </style>
</resources>
